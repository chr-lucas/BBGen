root = true


[*]
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = tab
max_line_length          = 120


[*.py]
indent_style             = space
indent_size              = 4


[*.md]
indent_style             = space
indent_size              = 4
trim_trailing_whitespace = false


[*.yml]
indent_style             = space
indent_size              = 2
